<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I-LEAGUE"
        android:id="@+id/button1"
        android:background="#d0d6dc"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:onClick="I-LEAGUE"
        style="?android:attr/borderlessButtonStyle"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:text="FED CUP"
        android:id="@+id/button2"
        android:onClick="FED CUP"
        android:background="#d0d6dc"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button1"
        android:layout_toEndOf="@+id/button1"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="SANTOSH TROPHY"
        android:background="#d0d6dc"
        android:id="@+id/button3"
        android:onClick="SANTOSH TROPHY"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:text="NATIONAL TOURNAMENTS"
        android:background="#d0d6dc"
        android:id="@+id/button4"
        android:onClick="NATIONAL TOURNAMENTS"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal" />

</LinearLayout>